
<style>
    .reload {
        margin-top: .35em;
        font-weight: 300;
        line-height: 1em;
        font-size: 1.7em;
    }

    .reload-icon{
        position: relative;
        top: .18em;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header" data-background-color="blue">

                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="card-block">
                            <h4 class="title">Reports</h4>
                            <p class="category">A list of reports that have been generated.</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                        <p class="reload">Reload Data: <i class="material-icons reload-icon">refresh</i></p>
                        
                    </div>
                </div>

            </div>
            <div class="card-content table-responsive">
                <table id="reportTable" class="table table-hover">
                    <thead class="text-primary">
                        <tr>
                            <th>Report Type</th>
                            <th>Num. Students</th>
                            <th>Created</th>
                            <th>Last Updated</th>
                            @*<th></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Risk Index</td>
                            <td>8</td>
                            <th>2/3/2018</th>
                            <th>2/22/2018</th>
                            @*<td class="text-primary"><a asp-area="" asp-controller="Reports" asp-action="RiskIndex">View Report</a></td>*@
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        var clickHandler = function (row) {
            return function () {
                var cell = row.getElementsByTagName("td")[0];
                var id = cell.innerHTML;
                window.location.href = '@Url.Action("RiskIndex", "Reports")';
            };
        };

        addRowHandlers("reportTable", clickHandler);
    });


</script>