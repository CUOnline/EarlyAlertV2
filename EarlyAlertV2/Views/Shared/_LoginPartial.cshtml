@using Microsoft.AspNetCore.Identity
@using EarlyAlertV2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <button type="submit" class="btn btn-default">Log out</button>
    </form>
}
else
{
    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="navbar-form navbar-right">
        <button type="submit" class="btn btn-default" name="provider" value="Canvas" title="Log in using your Canvas account">LOG IN</button>
    </form>
}
